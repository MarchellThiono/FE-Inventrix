<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Karyawan.HomeKaryawanFragment">

    <!-- Header Logo -->
    <ImageView
        android:id="@+id/gambar_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Nama Sekolah -->
    <TextView
        android:id="@+id/nama_sekolah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/lokasi"
        android:textColor="@color/biru"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/gambar_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/gambar_logo"
        app:layout_constraintBottom_toBottomOf="@id/gambar_logo"/>

    <!-- Garis -->
    <View
        android:id="@+id/garis"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corner"
        app:layout_constraintTop_toBottomOf="@id/gambar_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Search -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchViewBarang"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:background="@drawable/search_bg"
        android:elevation="4dp"
        android:iconifiedByDefault="false"
        android:padding="5dp"
        android:queryHint="Masukkan nama barang"
        app:layout_constraintTop_toBottomOf="@id/garis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/chipKategori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kategori"
        android:background="@drawable/bg_chip"
        android:textColor="@android:color/black"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="26dp"
        app:layout_constraintTop_toBottomOf="@id/searchViewBarang"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Chip Merek -->
    <TextView
        android:id="@+id/chipSemua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:background="@drawable/bg_chip"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:text="Merek"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@id/chipKategori"
        app:layout_constraintTop_toTopOf="@id/chipKategori" />

    <!-- Garis bawah chip -->
    <View
        android:id="@+id/garis_chip"
        android:layout_width="0dp"
        android:layout_height="2.7dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/gradient_line"
        app:layout_constraintTop_toBottomOf="@id/chipSemua"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Swipe Refresh -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/garis_chip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Empty State -->
            <TextView
                android:id="@+id/tv_empty_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="Belum ada barang yang tersedia."
                android:textColor="@color/biru"
                android:textSize="16sp"
                android:visibility="gone"/>

            <!-- Recycler -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/nama_barang_karyawan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>
        </FrameLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminate="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
