<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Admin.ui.home.HomeFragment">

    <ImageView
        android:id="@+id/gambar_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/person"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:id="@+id/nama_sekolah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/lokasi"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/biru"
        app:layout_constraintTop_toTopOf="@id/gambar_logo"
        app:layout_constraintBottom_toBottomOf="@id/gambar_logo"
        app:layout_constraintStart_toEndOf="@id/gambar_logo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="20dp" />

    <!-- Garis pemisah -->
    <View
        android:id="@+id/garis_pemisah"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@drawable/rounded_corner"
        app:layout_constraintTop_toBottomOf="@id/gambar_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/notif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_notifications_black_24dp"
        app:layout_constraintTop_toBottomOf="@+id/garis_pemisah"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"/>

    <!-- Search View -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchViewBarang"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:queryHint="Masukkan nama barang"
        android:iconifiedByDefault="false"
        android:background="@drawable/search_bg"
        android:elevation="4dp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/notif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp" />

    <!-- Chip kategori -->
    <TextView
        android:id="@+id/chipSemua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Merek"
        android:background="@drawable/bg_chip"
        android:textColor="@android:color/black"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="26dp"
        app:layout_constraintTop_toBottomOf="@id/searchViewBarang"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/kelola_merek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:background="@drawable/bg_chip"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:text="Kelola merek"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@id/chipSemua"
        app:layout_constraintTop_toTopOf="@id/chipSemua" />

    <!-- Garis bawah kategori -->
    <View
        android:id="@+id/garis_bawah_chip"
        android:layout_width="0dp"
        android:layout_height="2.7dp"
        android:background="@drawable/gradient_line"
        app:layout_constraintTop_toBottomOf="@id/chipSemua"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/garis_bawah_chip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <ImageView
        android:id="@+id/btntmbh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_tmbh"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvbarangadmin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="120dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/garis_bawah_chip"
        app:layout_constraintBottom_toTopOf="@id/btntmbh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>