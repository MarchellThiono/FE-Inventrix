<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Admin.ui.home.DetailPermintaanFragment">

    <!-- SCROLL UTAMA -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="16dp">


            <!-- Header Logo + Nama -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/gambar_logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/logo"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/nama_sekolah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CV. Sejahtera Bahagia"
                    android:textSize="18sp"
                    android:textColor="@color/biru"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Back Button -->
            <ImageView
                android:id="@+id/menu_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="6dp"
                android:src="@drawable/baseline_arrow_back" />

            <!-- HEADER TANGGAL -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tanggal"
                    android:textStyle="bold"
                    android:layout_marginStart="7dp"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Tanggal & Waktu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="2dp">

                <TextView
                    android:id="@+id/tgl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2025-12-01"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvwaktu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:12:34"
                    android:textSize="14sp"
                    android:layout_marginEnd="10dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/gradient_line" />

            <!-- TITLE PERMINTAAN -->
            <TextView
                android:id="@+id/rv_Permintaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Permintaan"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="12dp"/>

            <!-- RecyclerView Item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_permintaanbarang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/gradient_line" />
            </LinearLayout>

            <!-- Keterangan -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keterangan"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="14dp"/>

            <TextView
                android:id="@+id/rv_jenis"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Status"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:background="#D9D9D9"
                android:textSize="15sp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/konfirmasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Konfirmasi"/>



        </LinearLayout>

    </ScrollView>

    <!-- PROGRESS BAR -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>
