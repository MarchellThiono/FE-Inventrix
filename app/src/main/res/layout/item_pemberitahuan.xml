<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:backgroundTint="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Ikon pemberitahuan -->
        <ImageView
            android:id="@+id/iconPemberitahuan"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_notifications_black_24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Judul pemberitahuan -->
        <TextView
            android:id="@+id/tvJudulPemberitahuan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Pemberitahuan"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/biru"
            app:layout_constraintStart_toEndOf="@id/iconPemberitahuan"
            app:layout_constraintTop_toTopOf="@id/iconPemberitahuan"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" />

        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_delete_24"
            app:layout_constraintTop_toTopOf="@id/tvJudulPemberitahuan"
            app:layout_constraintBottom_toBottomOf="@id/tvJudulPemberitahuan"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Isi pemberitahuan -->
        <TextView
            android:id="@+id/tvIsiPemberitahuan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Barang dari gudang sedang dikirim ke toko"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/tvJudulPemberitahuan"
            app:layout_constraintStart_toStartOf="@id/tvJudulPemberitahuan"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="6dp" />

        <!-- Tanggal -->
        <TextView
            android:id="@+id/tvTanggalPemberitahuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10-05-2025"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/tvIsiPemberitahuan"
            app:layout_constraintStart_toStartOf="@id/tvIsiPemberitahuan"
            android:layout_marginTop="8dp" />

        <!-- Waktu -->
        <TextView
            android:id="@+id/tvWaktuPemberitahuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:20:05"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/tvIsiPemberitahuan"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
